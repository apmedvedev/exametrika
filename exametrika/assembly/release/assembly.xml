<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
                <include>*.war</include>
                <include>*.so</include>
                <include>*.dll</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>774</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/resources</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>**/*.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/schemas</directory>
            <outputDirectory>doc/schemas</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../../agent/target</directory>
            <outputDirectory>lib/agent</outputDirectory>
            <includes>
                <include>*.tar.gz</include>
                <include>*.zip</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>